# Core
APP_ENV=dev
SECRET_KEY=change-me

# Database
DATABASE_URL=postgresql+psycopg2://autoapply:password@db:5432/autoapply
REDIS_URL=redis://redis:6379/0

# Object storage
STORAGE_PROVIDER=s3
S3_BUCKET=autoapply-uploads
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# LLM (choose one and set MODEL appropriately)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
